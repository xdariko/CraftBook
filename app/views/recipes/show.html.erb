<%= render 'shared/navbar' %>

<div class="container mx-auto px-4 pt-24 max-w-6xl">
  <%= render partial: 'recipes/info_recipe', locals: { recipe: @recipe } %>
  
  <div class="mb-12">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h2 class="text-2xl font-bold text-stone-800 mb-1">Состав</h2>
      </div>
      <span class="text-sm font-medium text-stone-600 bg-stone-100 px-3 py-1.5 rounded-full">
        <%= @recipe.ingredient_recipes.count + @recipe.recipe_recipes.count + @recipe.recipe_tags.where(tag_type: 'as_ingredient').count %> элементов
      </span>
    </div>
    
    <div id="items_list" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
      <div class="flex flex-col h-full group">
        <%= link_to add_ingredient_modal_project_recipe_path(@project, @recipe),
                   data: { turbo_frame: 'modal' },
                   class: "block h-full flex flex-col bg-white rounded-xl border-2 border-dashed border-stone-300 hover:border-amber-400 hover:bg-amber-50 transition-all duration-200" do %>
          <div class="flex-1 p-3 flex items-center justify-center aspect-square">
            <div class="flex flex-col items-center justify-center w-full h-full">
              <div class="w-12 h-12 rounded-full bg-amber-100 flex items-center justify-center mb-3 group-hover:bg-amber-200 transition-colors duration-200">
                <svg class="w-6 h-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              </div>
              <span class="text-sm font-medium text-stone-600 group-hover:text-amber-700 transition-colors duration-200">Добавить элемент</span>
            </div>
          </div>
        <% end %>
      </div>
      
      <% all_items = @recipe.ingredient_recipes + @recipe.recipe_recipes + @recipe.recipe_tags.select(&:as_ingredient?) %>
      
      <% all_items.each do |item_recipe| %>
        <%= render partial: 'recipes/item_card', locals: { 
          item_recipe: item_recipe,
          project: @project,
          recipe: @recipe
        } %>
      <% end %>
    </div>
  </div>
  
  <div class="mb-12">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h2 class="text-2xl font-bold text-stone-800 mb-1">Теги</h2>
      </div>
      <span class="text-sm font-medium text-stone-600 bg-stone-100 px-3 py-1.5 rounded-full">
        <%= @recipe.recipe_tags.select(&:as_tag?).count %> тегов
      </span>
    </div>
    
    <div id="tags_list" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
      <div class="flex flex-col h-full group">
        <%= link_to add_tag_modal_project_recipe_path(@project, @recipe),
                   data: { turbo_frame: 'modal' },
                   class: "block h-full flex flex-col bg-white rounded-xl border-2 border-dashed border-stone-300 hover:border-amber-400 hover:bg-amber-50 transition-all duration-200" do %>
          <div class="flex-1 p-3 flex items-center justify-center aspect-square">
            <div class="flex flex-col items-center justify-center w-full h-full">
              <div class="w-12 h-12 rounded-full bg-amber-100 flex items-center justify-center mb-3 group-hover:bg-amber-200 transition-colors duration-200">
                <svg class="w-6 h-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              </div>
              <span class="text-sm font-medium text-stone-600 group-hover:text-amber-700 transition-colors duration-200">Добавить тег</span>
            </div>
          </div>
        <% end %>
      </div>
      
      <% @recipe.recipe_tags.select(&:as_tag?).each do |recipe_tag| %>
        <%= render partial: 'recipes/tag_card', locals: { 
          tag: recipe_tag.tag, 
          recipe_tag: recipe_tag,
          project: @project,
          recipe: @recipe
        } %>
      <% end %>
    </div>
  </div>
</div>