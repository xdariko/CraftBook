<%= render TurboModalComponent.new(title: "Изменение ингредиента") do %>  
  <%= form_with(model: @ingredient, url: project_ingredient_path(@project, @ingredient), method: :patch, local: true) do |form| %>
    <div class="mb-6">
      <%= form.label :name, 'Название', class: 'block text-sm font-medium text-stone-700 mb-2' %>
      <%= form.text_field :name, id: 'ingredient_name', required: true,
          class: 'w-full rounded-lg border border-stone-300 bg-white py-3 px-4 text-base font-medium text-stone-800 outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-200 focus:ring-opacity-50 transition-colors' %>
    </div>
    
    <div class="field mb-6">
      <%= form.label :description, 'Описание', class: 'block text-sm font-medium text-stone-700 mb-2' %>
      <%= form.text_area :description, rows: 3,
          class: 'w-full rounded-lg border border-stone-300 bg-white py-3 px-4 text-base font-medium text-stone-800 outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-200 focus:ring-opacity-50 transition-colors resize-none' %>
    </div>

    <div class="field mb-6">
      <%= form.label :image, 'Изображение', class: 'block text-sm font-medium text-stone-700 mb-2' %>
      <%= form.file_field :image,
          class: 'w-full rounded-lg border border-stone-300 bg-white py-3 px-4 text-base font-medium text-stone-800 outline-none file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-amber-50 file:text-amber-700 hover:file:bg-amber-100 transition-colors' %>
    </div>

    <div class="mt-8">
      <%= form.submit 'Изменить',
          class: 'hover:bg-amber-500 w-full rounded-lg bg-amber-600 py-3 px-8 text-center text-base font-semibold text-white outline-none transition-colors duration-200' %>
    </div>
  <% end %>
<% end %>