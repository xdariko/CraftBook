<div id="info_ingredient" class="mb-10">
  <div class="flex flex-col md:flex-row gap-8">
    <div class="md:w-1/3">
      <div class="bg-stone-50 rounded-2xl overflow-hidden aspect-square shadow-sm">
        <% if @ingredient.image.attached? %>
          <%= image_tag @ingredient.image, class: "object-cover w-full h-full" %>
        <% else %>
          <div class="flex flex-col items-center justify-center w-full h-full p-4">
            <span class="text-5xl font-bold text-stone-300"><%= @ingredient.name[0..1].upcase %></span>
            <span class="text-sm text-stone-400 mt-2">ингредиент</span>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="md:w-2/3">
      <div class="flex items-start justify-between mb-6">
        <div class="flex-grow">
          <h1 id="ingredient_name" class="text-4xl font-bold text-stone-800 mb-6"><%= @ingredient.name %></h1>
          <% if @ingredient.description.present? %>
            <div id="ingredient_description" class="mb-8">
              <h3 class="text-lg font-medium text-stone-700 mb-3">Описание:</h3>
              <p class="text-stone-600 leading-relaxed text-lg"><%= @ingredient.description %></p>
            </div>
          <% else %>
            <div id="ingredient_description" class="mb-8">
              <h3 class="text-lg font-medium text-stone-700 mb-3">Описание:</h3>
              <p class="text-stone-400 italic">Описание отсутствует</p>
            </div>
          <% end %>
        </div>
        
        <div class="ml-6 flex-shrink-0">
          <%= link_to edit_project_ingredient_path(@project, @ingredient), 
                     data: { turbo_frame: 'modal' },
                     class: "inline-flex items-center px-5 py-2.5 rounded-xl bg-amber-50 text-amber-700 hover:bg-amber-100 border border-amber-200 transition-colors duration-200 shadow-sm" do %>
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
            Изменить
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>