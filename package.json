{
  "name": "app",
  "private": true,
  "scripts": {
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "watch:js": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch",

    "build:css": "npx --no-install tailwindcss --input ./app/assets/stylesheets/application.tailwind.css --output ./app/assets/builds/tailwind.css",
    "watch:css": "npx --no-install tailwindcss --input ./app/assets/stylesheets/application.tailwind.css --output ./app/assets/builds/tailwind.css --watch",

    "build": "yarn build:js",
    "watch": "yarn watch:js"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.12",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "esbuild": "^0.24.0"
  }
}

